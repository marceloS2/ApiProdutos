@model shoope.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-grup">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
                <div class="form-grup">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                </div>
                <div class="form-grup">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                </div>
                <div class="form-grup">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" />
                </div>
           
            <br>
            <dv class="form-grup">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </dv>
        </form>

    </div>
</div>
</hr>
</br>
<div>
    <a asp-action="Index">Voltar</a>
</div>